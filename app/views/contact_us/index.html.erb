<%= provide(:title, 'Contact Us') %>
<main>
  <!-- Hero area Start-->
  <div class="slider-area">
    <div class="slider-height2 slider-bg4 hero-overly d-flex align-items-center">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-xl-5 col-lg-6 col-md-6">
            <div class="hero-caption hero-caption2">
              <h2>Contact Us</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--  Hero area End -->
  <!-- Hero Area End-->
  <!--?  Contact Area start  -->
  <section class="contact-section">
    <div class="container">
      <div class="d-none d-sm-block mb-5 pb-4">
        <div id="map" style="height: 480px; position: relative; overflow: hidden;">
        </div>
        <script
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxlkvikLcuQvYvdGr51TJ6KrDoLJsmmIk&callback=initMap&v=weekly"
          defer></script>
        <script>
          let map;
          function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
              center: { lat: 0.285124, lng: 32.62046 },
              zoom: 8,
            });
          }
          window.initMap = initMap;
        </script>
      </div>
      <div class="row">
        <div class="col-12">
          <h2 class="contact-title">Get in Touch</h2>
        </div>
        <div class="col-lg-8">
          <%= form_with model: @contact_us, class: "form-contact contact_form", id: "contactForm" do |f| %>
          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <%= f.text_area :message, class: "form-control w-100", id: "message", cols: 30, rows: 9, placeholder: "Enter Message" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Enter your name" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.text_field :email, class: "form-control", id: "email", placeholder: "Email" %>
              </div>
            </div>
            <div class="col-12">
              <div class="form-group">
                <%= f.text_field :subject, class: "form-control", id: "subject", placeholder: "Enter Subject"  %>
              </div>
            </div>
          </div>
          <div class="form-group mt-3">
            <%= f.submit "Send", class: "button button-contactForm boxed-btn" %>
          </div>
          <% end %>
        </div>
        <div class="col-lg-3 offset-lg-1">
          <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-home"></i></span>
            <div class="media-body">
              <h3>Bulenga - Kampala Mityana Road.</h3>
              <p>P.O. Box 31130 Kampala, Uganda</p>
            </div>
          </div>
          <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
            <div class="media-body">
              <h3>+256 772 460 615</h3>
              <p>Mon to Fri 9am to 6pm</p>
            </div>
          </div>
          <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-email"></i></span>
            <div class="media-body">
              <h3>info@childrensurehouse.com</h3>
              <p>Send us your inquiry anytime!</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Contact Area End -->
</main>