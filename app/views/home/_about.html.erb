<div class="support-company-area section-padding">
  <div class="container">
    <div class="row align-items-center justify-content-between">
      <div class="col-xl-6 col-lg-6 col-md-10">
        <div class="support-location-img">
          <%= image_tag url_for(@about.images[0]) rescue nil %>
        </div>
      </div>
      <div class="col-xl-5 col-lg-6 col-md-10">
        <div class="right-caption">
          <div class="section-tittle">
            <h2><%= @about.title rescue nil %> </h2>
          </div>
          <div class="support-caption">
            <p class="mb-10"><%= @about.content rescue nil %></p>
            <a href="<%= @about.link rescue nil %>" class="btn about-btn"><%= @about.link_text rescue nil %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>