<%= provide(:title, 'Testimonies') %>
<div class="whole-wrap">
  <div class="container box_1170">
    <% @testmonies.each do |testmony| %>
    <div class="section-top-border">
      <h3 class="mb-30"><%= testmony.title %></h3>
      <div class="row">
        <div class="col-md-3">
          <img src="<%= url_for(testmony.image) %>" alt="" class="img-fluid">
        </div>
        <div class="col-md-9 mt-sm-20">
          <p><%= testmony.content %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>